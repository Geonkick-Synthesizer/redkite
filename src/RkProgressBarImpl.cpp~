#include "RkProgressBarImpl.h"
#include "RkPainter.h"
#include "RkLog.h"

RkProgressBar::RkProgressBarImpl::RkProgressBarImpl(RkProgressBar *interface, const std::string &text, RkWidget *parent)
    : RkWidgetImpl(static_cast<RkWidget*>(interface), parent)
    , inf_ptr{interface}
    , labelText{text}
{
}

RkProgressBar::RkProgressBarImpl::~RkProgressBarImpl()
{
}

void RkProgressBar::RkProgressBarImpl::setText(const std::string &text)
{
        labelText = text;
        update();
}

std::string RkProgressBar::RkProgressBarImpl::text() const
{
        return labelText;
}

void RkProgressBar::RkProgressBarImpl::setImage(const RkImage &image)
{
        labelImage = image;
}

void RkProgressBar::RkProgressBarImpl::drawLabel()
{
        if (labelText.empty() && labelImage.isNull())
                return;

        {
                RkPainter painter(inf_ptr);
                painter.fillRect(rect(), background());
        }

        // TODO: use the same painter for both when fixing the Cairo problem of text over image.
        if (!labelImage.isNull()) {
                RkPainter painter(inf_ptr);
                painter.drawImage(labelImage, 0, 0);
        }

        if (!labelText.empty()) {
                RkPainter painter(inf_ptr);
                painter.drawText(inf_ptr->rect(), labelText);
        }

}

